package greentic:host/iac-write-files@1.0.0

record file-spec {
  path: string,
  content: string,
  overwrite: bool
}

record write-error {
  code: u32,
  message: string,
  path: option<string>
}

world write-files {
  import result<list<string>, write-error>;

  interface write-files {
    write-files: func(files: list<file-spec>) -> result<list<string>, write-error>
  }
}
