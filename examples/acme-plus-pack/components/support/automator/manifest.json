{
  "id": "support.automator",
  "version": "0.2.0",
  "supports": ["messaging"],
  "world": "acme:support/automator",
  "profiles": {
    "default": "standard",
    "supported": ["standard"]
  },
  "capabilities": {
    "wasi": {
      "random": true,
      "clocks": true
    },
    "host": {
      "secrets": {
        "required": ["SLACK_BOT_TOKEN", "CRM_API_TOKEN"]
      },
      "messaging": {
        "inbound": true,
        "outbound": true
      },
      "telemetry": {
        "scope": "tenant"
      }
    }
  }
}
